@using QuestionTask.Domain.DTO
@model List<JsonQuestion> 
<div class="container">
    <div class="question">
     

        @for(var item=0; item<Model.Count;item++)
            {
        <div class="row">@Model[item].Label</div>
        
            @if(Model[item].Type=="text")
                {
                    <input type="text"  class="form-control"/>
                }
                else if(Model[item].Type=="checkbox")
                {
                    @for (int option= 0;option < Model[item].Options.Count;option++)
                    {
                        <input type="checkbox" value="true"  />@Model[item].Options[option]
                        <br />
                    }
                }else if(Model[item].Type=="radio")
                {
                     @for (int option= 0;option < Model[item].Options.Count;option++)
                    {
                       <input type="radio" value="@Model[item].Options[option]"   />@Model[item].Options[option]
                        <br />
                    }
                }

        }
        <div class="row">
            <div class="col-md-12">
                @if(ViewBag.error=="Invalid json")
                {
                    <h3>InValid Json</h3>
                    <h6>Valid Json</h6>
                    <p>
                        [{
		"type": "text",
		"label": "What is your name?"
	},
	{
		"type": "radio",
		"label": "What is your gender?",
		"options": ["Male","Female"]
	},
	{
		"type": "checkbox",
		"label": "Select all your hobbies",
		"options": ["Music","Movies","Sports"]
	}
]


                        </p>
                }else{
                <button class="btn btn-primary" style="float:right">Submit</button>
                }

            </div>


        </div>

    </div>

</div>