@using QuestionTask.Domain.DTO
@model QuestionSubmittDTO

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h5>Full Name:-</h5>
               <h5> @Model.FullName</h5>
            </div>
             <div class="col-md-6">
                 <h5>Email :-</h5>
                <h5> @Model.Email</h5>
            </div>
        </div>
        @foreach(var item in @Model.QuestionDTOs)
        {
        <div class="row">
            <div class="col-md-6">
            @item.Title
            </div>
            <div class="col-md-6">
                @if(item.Type=="text")
                {
                    @item.Answer
                }else{
                    @foreach(var o in item.Options)
                {
                    @(o +" ,")
                }
                }
            </div>
        </div>
        }
    </div>